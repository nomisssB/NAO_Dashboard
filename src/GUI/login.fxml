<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="360.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.LoginController">
   <stylesheets>
      <URL value="@style_main_scene.css" />
   </stylesheets>
   <children>
      <GridPane hgap="8.0" layoutX="45.0" layoutY="310.0" prefHeight="36.0" prefWidth="510.0" styleClass="module" vgap="8.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <TextField fx:id="txt_ipaddress" promptText="Type in IP adress">
               <tooltip>
                  <Tooltip text="e.g. 192.168.1.123" />
               </tooltip>
            </TextField>
            <TextField fx:id="txt_port" promptText="Port" GridPane.columnIndex="1">
               <tooltip>
                  <Tooltip text="e.g. 34486" />
               </tooltip>
            </TextField>
            <Button fx:id="btn_connect" mnemonicParsing="false" onAction="#connect" prefHeight="25.0" prefWidth="129.0" text="Connect" GridPane.columnIndex="2">
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </GridPane>
      <ListView fx:id="connection_list" layoutX="45.0" layoutY="21.0" prefHeight="282.0" prefWidth="374.0" />
      <Button fx:id="btn_load" layoutX="453.0" layoutY="52.0" mnemonicParsing="false" text="load" />
      <Button fx:id="btn_delete" layoutX="453.0" layoutY="92.0" mnemonicParsing="false" text="delete" />
   </children>
</AnchorPane>
