<AnchorPane fx:id="pane_login" prefHeight="360.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.LoginController">
   <stylesheets>
      <URL value="@style_main_scene.css" />
   </stylesheets>
   <children>
      <GridPane hgap="8.0" layoutX="45.0" layoutY="310.0" prefHeight="36.0" prefWidth="510.0" styleClass="module" vgap="8.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="45.0" AnchorPane.rightAnchor="45.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <TextField fx:id="txt_ipaddress" promptText="IP ADDRESS">
               <tooltip>
                  <Tooltip text="e.g. 192.168.1.123" />
               </tooltip>
            </TextField>
            <TextField fx:id="txt_port" promptText="PORT" GridPane.columnIndex="1">
               <tooltip>
                  <Tooltip text="e.g. 34486" />
               </tooltip>
            </TextField>
            <Button fx:id="btn_connect" mnemonicParsing="false" onAction="#connect" prefHeight="25.0" prefWidth="129.0" text="Connect" GridPane.columnIndex="2">
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </GridPane>
      <Button fx:id="btn_delete" layoutX="289.0" layoutY="261.0" mnemonicParsing="false" onAction="#deleteEntry" prefHeight="36.0" prefWidth="36.0" AnchorPane.bottomAnchor="60.0" AnchorPane.rightAnchor="275.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Button>
      <Button fx:id="btn_close" layoutX="45.0" layoutY="266.0" mnemonicParsing="false" onAction="#close" prefHeight="25.0" prefWidth="128.0" text="close" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="45.0" AnchorPane.rightAnchor="427.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></Button>
      <ListView fx:id="connection_list" layoutX="336.0" layoutY="48.0" onMouseClicked="#fill_txt" prefHeight="252.0" prefWidth="219.0" AnchorPane.bottomAnchor="60.0" AnchorPane.rightAnchor="45.0" AnchorPane.topAnchor="48.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding></ListView>
      <Label fx:id="h_connections" layoutX="336.0" layoutY="21.0" text="last (successful) connections:" />
   </children>
</AnchorPane>
